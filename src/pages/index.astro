<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
</head>
<body>
    <Nav client:visible />

    <div class="bg-eco-blue md:py-5 lg:py-10 xl:py-20">
        <div class="bg-eco-blue w-full text-white flex flex-col items-center py-5 px-5 sm:flex-row max-w-screen-xl mx-auto xl:pl-24 xl:pr-10 sm:justify-between xl:rounded-b">
            <div class="flex flex-col space-y-4 lg:space-y-5 md:w-1/2 lg:w-7/12">
