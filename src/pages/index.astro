                <div class="space-y-5 py-5 font-light lg:text-lg lg:py-10 lg:space-y-8 xl:text-xl">
                    {cardItems.map((e) => (
                        <div class="flex items-start space-x-5">
                            <img class="mt-2" src={e.img} alt="">
                            <p>{e.text}</p>
                        </div>
                    ))}
                </div>

            </div>
            <img src="/assets/images/contact.svg" alt="icon" class="hidden md:inline-block w-48 md:w-60 lg:w-96">
        </div>
    </div>
    <div class="bg-[#1050b0] text-white">
        <div class="flex justify-between py-10 px-5 lg:px-20 max-w-screen-lg mx-auto">
            <div class="flex flex-col items-center">
                <h1 class="text-3xl lg:text-5xl font-bold">107</h1>
                <p class="lg:text-xl">ЖУРНАЛОВ</p>
            </div>
            <div class="flex flex-col items-center">
                <h1 class="text-3xl lg:text-5xl font-bold">62013</h1>
                <p class="lg:text-xl">СТАТЕЙ</p>
            </div>
            <div class="flex flex-col items-center">
                <h1 class="text-3xl lg:text-5xl font-bold">226</h1>
                <p class="lg:text-xl">КНИГ</p>
            </div>
        </div>
    </div>

    <div class="w-full">
        <IndexCaro1 visible title={"Направления работы"} linkName={"ПЕРЕЙТИ КО ВСЕМУ КАТАЛОГУ"} link={"/book-releases"} items={items1} />
    </div>
    
    <div class="space-y-10 py-10 container relative">
        <div class="flex space-y-2 flex-col md:flex-row md:justify-between md:items-center">
            <h1 class="heading">Услуги</h1>
            <a class="flex space-x-5 md:space-x-10 items-center md:mt-2 group" href="/">
                <p class="whitespace-nowrap text-blue-500 group-hover:text-blue-600 transition font-semibold">ВСЕ УСЛУГИ</p>
                <img src="/assets/arrow.svg" alt="" class="group-hover:scale-105 transition duration-200" />
            </a>
        </div>

        <div class="grid gap-5 sm:grid-cols-2 md:gap-10 lg:grid-cols-3">
            {services.map((e) => (
                <a href="">
                    <img class="w-full object-cover" src={e} />
                </a>
            ))}
        </div>
    </div>

    <div class="w-full bg-carousel">
        <IndexCaro3 client:visible title={"Новости издательства"} linkName={"ВСЕ НОВОСТИ"} link={"/book-releases"} items={items3} />
