---
const {name, img, text} = Astro.props;
---

<div class="rounded shadow-brand p-5 md:p-7">
    <!-- MOBILE -->
    <div class="flex items-center space-x-3 md:hidden">
        <div class="avatar">
            <div class="rounded-full w-16 h-16">
                <img src={img} alt="avatar" />
            </div>
        </div>
        <h1 class="text-xl font-bold">{name}</h1>
    </div>
    <div class="small-text md:hidden mt-3 prose max-w-none prose-headings:mt-5 prose-p:my-0 prose-a:text-blue-600 prose-a:no-underline hover:prose-a:text-blue-500 hover:prose-a:underline">
        {text}
    </div>

    <!-- DESKTOP -->
    <div class="md:flex items-center space-x-3 lg:space-x-5 hidden">
        <div class="avatar self-start">
            <div class="rounded-full w-24 h-24">
                <img src={img} alt="avatar" />
            </div>
        </div>
        <div>
            <h1 class="text-xl font-bold">{name}</h1>
            <div class="small-text prose max-w-none prose-headings:mt-5 prose-p:my-0 prose-a:text-blue-600 prose-a:no-underline hover:prose-a:text-blue-500 hover:prose-a:underline">{text}</div>
        </div>
    </div>
</div>
