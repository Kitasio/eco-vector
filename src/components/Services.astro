---
const { items = [] } = Astro.props;
---

<div>
    <h1 class="heading">Услуги</h1>

    <!-- MOBILE -->
    <div class="mt-5 space-y-5 lg:hidden">
        {items.map((i) => (
            <div class="collapse w-full rounded shadow-brand p-5">
                <input type="checkbox">
                <div class="collapse-title bg-white px-0 text-xl font-medium flex gap-3 justify-between items-center cursor-pointer">
                    <h1 class="text-black">{i.title}</h1>
                    <div>
                        <img class="text-black w-5 h-5" src="/assets/icons/chevron-down.svg" alt="">
                    </div>
                </div>
                <div class="collapse-content px-0">
                    <div class="pt-1 border-t-2">
                        <p class="whitespace-pre-line small-text">
                            {i.text}
                        </p>
                        <a
                            href={i.link}
                            class="mt-3 btn btn-outline border-2 rounded border-eco-blue text-eco-blue hover:text-white hover:bg-eco-blue hover:border-eco-blue xl:btn-lg"
                            >Заказать</a
                        >
                    </div>
                </div>
            </div>
        ))}
    </div>

    <div class="hidden lg:grid grid-cols-4 gap-10 mt-5">
            <div class="col-span-1 space-y-2">
                {items.map((i) => (
                    <h1 class="service-btn text-lg leading-6 opacity-60 hover:opacity-100 cursor-pointer transition">
                        {i.title}
                    </h1>
                ))}
            </div>
            <div class="col-span-3 rounded shadow-brand p-10 min-h-32">
                {items.map((i) => (
                    <div
                        class="w-full service hidden"
                    >
                        <h1 class="text-xl font-medium">{i.title}</h1>
                        <p class="whitespace-pre-line small-text">
                            {i.text}
                        </p>
                        <a
                            href={i.link}
                            class="btn btn-outline mt-4 border-2 rounded border-eco-blue text-eco-blue hover:text-white hover:bg-eco-blue hover:border-eco-blue">Заказать</a>
                    </div>
                ))}          
            </div>
    </div>
</div>

<script src={Astro.resolve('../functions/services.js')} defer hoist></script>